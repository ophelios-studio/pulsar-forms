{define "zf-field", string $label, string $inputIdentifier, array $attributes = []}
    {var bool $required = $attributes['required'] ?? false}
    {var ?string $layout = $attributes['layout'] ?? null}
    {var ?string $help = $attributes['help'] ?? null}
    <div class="mb-3">
        <label for="{$inputIdentifier}" class="form-label">
            {$label . ($required ? localize("forms.labels.required"))|noescape}
            <span n:if="$help"
                  class="form-help"
                  data-bs-toggle="popover"
                  data-bs-placement="top"
                  data-bs-html="true"
                  data-bs-content="{$help|noescape}">?</span>
        </label>
        {if $layout}
            {$layout}
        {else}
            {block content}{/block}
        {/if}
    </div>
{/define}